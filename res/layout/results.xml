<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/tableLayout1"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    <TableRow
            android:id="@+id/originRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

        <TextView
                android:id="@+id/originTV"
                android:width="75px"
                android:background="#CC22FF"
                android:text="@string/origin"/>
        <TextView
                android:id="@+id/originValueTV"
                android:text="W there"
                android:background="#EC7703"
                />
    </TableRow>

    <TableRow
            android:id="@+id/answerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

        <TextView
                android:id="@+id/answerTV"
                android:width="75px"
                android:background="#AA11FF"
                android:text="@string/answer"/>

        <TextView
                android:id="@+id/answerValueTV"
                android:text="and even more stuff there and even more stuff there and even more stuff there"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ECDE03"
                />
    </TableRow>

</TableLayout>